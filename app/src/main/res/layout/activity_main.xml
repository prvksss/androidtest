<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#1B2316"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/desc"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="21sp"
        android:padding="15dp"
        android:textStyle="italic"
        android:textColor="#1B2316"
        android:text="@string/desc" />

    <Button
        android:id="@+id/buttonische"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:text="@string/module"
        android:onClick="moduleCounter"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/digit"
        android:layout_below="@id/buttonische"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="21sp"
        android:padding="15dp"
        android:textStyle="italic"
        android:textColor="#1B2316"
        android:layout_centerHorizontal="true"
        android:text="" />

    <ImageView
        android:id="@+id/chelick"
        android:layout_below="@id/digit"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_baseline_accessibility_24"/>



</RelativeLayout>